

<div class="container" style="padding-top: 4%;padding-bottom: 10%;">
  <h1 class="title" style="text-align: center; padding-top: 2%;"><img src="https://image.flaticon.com/icons/svg/876/876204.svg" style="max-width: 32px;max-height: 32px;">Create Account </h1> 
        <div class="columns is-mobile">
            <div class="column is-half is-offset-one-quarter">
                <div class="field">
                    <h5 class="subtitle">Personal Information</h5>
              
                    <%- include('partials/message.ejs') %>
                  <form action="/signup" method="POST">
                    <div class="columns">
                      <div class="column">
                         <label class="label">First Name</label>
                        <input name="firstName" class="input" type="text"  ></div>
                      <div class="column">
                        <label class="label">Last Name</label>
                        <input  name="lastName" class="input" type="text" >
                      </div>
                    </div>
                   
                       <label class="label">Email</label>
                       <input name="email" class="input" type="email"  >  
                       <div class="columns">
                         <div class="column">
                          <label class="label">Password</label>
                          <input name="password" class="input" type="password"  >  
                         </div>
                         <div class="column is-one-quarter">
                          <label class="label">Zip Code</label>
                          <input  name="zipCode" class="input" type="number" >
                         </div>
                       </div>
                       <div class="columns">
                        <div class="column">
                          <label class="label">Career Level</label>
                          <select name="careerLevel">
                           
                           <option>Select career level</option>
                           <option>Student(High School)</option>
                           <option>Student(Undergrate/Graduate)</option>
                           <option>Entry Level</option>
                           <option>Experienced(Non-Manager)</option>
                           <option>Manger(Manager/Supervisor of Staff)</option>
                           <option>Executive(SVP,VP, etc)</option>
                           <option>Senior Executive(President,CFO,etc)</option>
                          </select>
                          </div>
                          <div class="column">
                            <label class="label">Education level</label>
                            <select name="educationLevel">
                        
                              <option>Select education level</option>
                              <option>Some High School Coursework</option>
                              <option>High School or equivalent</option>
                              <option>Certification</option>
                              <option>Vocantional</option>
                              <option>Some College Coursework Completed</option>
                              <option>Associate Degree</option>
                              <option>Bachelor's Degree</option>
                              <option>Master's Degree</option>
                              <option>Doctorate</option>
                              <option>Professional</option>
                          </select>
                          </div>
                          </div>
                          <div class="file">
                            <label class="file-label">
                              <input class="file-input" type="file" name="resume">
                              <span class="file-cta">
                                <span class="file-icon">
                                  <i class="fas fa-upload"></i>
                                </span>
                                <span class="file-label">
                                  Choose Resume fileâ€¦
                                </span>
                              </span>
                            </label>
                          </div>
                      

                          <label class="checkbox">
                            <input type="checkbox">
                            I agree to the <a href="#">terms and conditions</a>
                          </label>
                      
                      <button class="button is-fullwidth is-primary " type="submit">Continue</button>
                      </form>
                  
                <a href="/login">Already have an account? Sign in</a>
                  </div> 
                </div>        
    
    </div>
    </div>
