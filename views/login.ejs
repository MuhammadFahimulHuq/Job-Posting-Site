
<div class="container" style="padding-top: 7%;padding-bottom: 13%;">

    <div class="columns is-mobile">
        <div class="column is-half is-offset-one-quarter">
          <h1 class="title" style="text-align: center;">Sign In With JobsHunts Account</h1>
  
          <%- include('partials/message.ejs') %>
            <form action="/login" method="POST">
              <label class="label">Email</label>

              <input name="email" class="input" type="email" placeholder="Email" >
      
            
              <label class="label">Password</label>

               <input name="password" class="input" type="password" placeholder="Password">
         
        
            
            <a href="/">Forgot Password?</a>
            <button class="button is-fullwidth is-primary is-outlined" type="submit">Login</button>
            </form>
           
       
              <p>Doesn't have a <%= title%> account?</p>
              <div class="buttons">
              <a href="/signup" >  <button class="button is-primary" >Sign up</button></a> 
              </div>

        </div>
      
      </div>



</div>
